<mvc:View
	controllerName="scheduleanu.controller.Upload"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	class="viewPadding">
	<l:VerticalLayout>
		<u:FileUploader
			id="fileUploader"
			name="myFileUpload"
			tooltip="Choose a file to read its content"
			change="handleFileSelection"
			style="Emphasized"
			fileType="xlsx,csv"
			placeholder="Choose a file for reading...">
		</u:FileUploader>
		<Button
			text="Upload File"
			press="handleUploadPress"/>
	</l:VerticalLayout>
</mvc:View>
